<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="author_tests_in_groups">
    <test name="author_tests">
        <groups>
            <run>
                <include name="authorGroup"/>
            </run>
        </groups>
        <classes>
            <class name="AuthorTest"/>
        </classes>
    </test>

    <test name="author_tests_without_precondition">
        <groups>
            <run>
                <include name="withoutPreconditionGroup"/>
            </run>
        </groups>
        <classes>
            <class name="AuthorTest"/>
        </classes>
    </test>

</suite>